rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }

    match /users/{userId} {
      allow create: if isSignedIn() && request.resource.id == request.auth.uid;
      allow read, update: if isSignedIn() && userId == request.auth.uid;
      // Prefer soft delete via application logic
      allow delete: if false;
    }

    match /tasks/{taskId} {
      allow create: if isSignedIn() && request.resource.data.owner == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.owner == request.auth.uid;
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
